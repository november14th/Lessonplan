    <form action="/subjects/<%= subject._id %>/plan" method="POST">
        <h2>Create Your Plan</h2>
        <div class="container">



            <header>
                <%= subject.name %>
            </header>
            <nav class="lp">Lesson Plan

            </nav>
            <aside>

                <ul>
                    <div class="subject">

                        <label>Sunday<input type = "text" name = "sunday" placeholder="Enter your description here"></input></label>


                    </div>
                    <div class="subject">

                        <label>Monday<input name = "monday" type = "text" placeholder="Enter your description here"></input></label>


                    </div>
                    <div class="subject">

                        <label>Tuesday<input type = "text" name = "tuesday" placeholder="Enter your description here"></input></label>


                    </div>
                    <div class="subject">

                        <label>Wednesday<input type = "text" name = "wednesday" placeholder="Enter your description here"></input></label>


