                    </div>
                    <div class="subject">

                        <label>Friday<input type = "text" name = "friday" placeholder="Enter your description here"></input></label>


                    </div>
                </ul>

            </aside>
            <section>Objectives
                <div class="objectives">
                    <textarea rows="8" cols="20" name="objectives"></textarea>
                </div>
            </section>
            <article>Week
                <div class="notes">
                    <input type="text" name="week">
                </div>

            </article>

            <footer>
                <input type="submit" value="Submit">
            </footer>

