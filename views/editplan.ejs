    <form action="/subjects/<%= subject._id %>/plan/<%=plan._id %>?_method=PUT" method="POST">
        <h2>Edit Your Plan</h2>
        <div class="container ">
            <header>
                <%= subject.name %>
            </header>
            <nav class="lp ">Lesson Plan

            </nav>
            <aside>

                <ul>
                    <div class="subject ">


                        <label>Sunday<input type = "text " name = "sunday " placeholder="Enter your description here " value="<%=plan.sunday %> "></input>
        </label>


                    </div>
                    <div class="subject">

                        <label>Monday<input name = "monday" type = "text" placeholder="Enter your description here" value="<%= plan.monday %> "></input></label>


                    </div>
                    <div class="subject">

                        <label>Tuesday<input type = "text" name = "tuesday" placeholder="Enter your description here" value="<%= plan.tuesday %> "></input></label>


                    </div>
                    <div class="subject">

                        <label>Wednesday<input type = "text" name = "wednesday" placeholder="Enter your description here" value="<%= plan.wednesday %> "></input></label>


                    </div>
                    <div class="subject">

                        <label>Thursday<input type = "text" name = "thursday"placeholder="Enter your description here" value="<%= plan.thursday %> "></input></label>


                    </div>
                    <div class="subject">

                        <label>Friday<input type = "text" name = "friday" placeholder="Enter your description here" value="<%= plan.friday %> "></input></label>


                    </div>
                </ul>

            </aside>
            <section>Objectives
                <div class="objectives">
                    <textarea rows="8" cols="20" name="objectives" placeholder="<%= plan.objectives %>"></textarea>
                </div>
            </section>
            <article>Week
                <div class="notes">
                    <input type="text" value="<%= plan.week %> " name="week">
                </div>

            </article>

            <footer>
                <input type="submit" value="Update">
            </footer>

    </form>
